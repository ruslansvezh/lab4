#include<iostream>
#include<math.h>
using namespace std;
int main()
{
	double v1,v2,s,v3,T;
	cout << "Enter speed of first car(v1): ";
	cin>> v1;
	cout << "Enter speed of second car(v2): ";
	cin >> v2;
	cout << "Enter distance between cars(s) : ";
	cin >> s;
	if (v1 > v2)
	{
		v3 = v1 - v2; //Скорость удаления
	}
	else
	{
		v3 = v2 - v1;
	}
	cout << "Enter driving time:";
	cin >> T;
	cout << "Distans between cars across " << T << " hours well be:" << T * v3 +s;
	return 0;
}
